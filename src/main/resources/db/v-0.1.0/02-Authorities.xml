<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">
    <changeSet id="02-Authorities" author="Yakovlev Aleksandr">
        <createTable tableName="authorities">
            <column name="username" type="NVARCHAR(50)" >
                <constraints nullable="false" foreignKeyName="authorities_username_fkey"
                             referencedTableName="users" referencedColumnNames="username" />
            </column>
            <column name="authority" type="NVARCHAR(50)" >
                <constraints nullable="false" />
            </column>
        </createTable>
        <createIndex tableName="authorities" indexName="authorities_username_authority_key" unique="true">
            <column name="username" />
            <column name="authority" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
